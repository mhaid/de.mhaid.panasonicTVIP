  "drivers": [
    {
      "deprecated": true,
      "id": "panasonic_viera",
      "class": "tv",
      "capabilities": [
        "onoff",
        "channel_up",
        "volume_up",
        "channel_down",
        "volume_down",
        "tv_input",
        "volume_mute",
        "tv_home",
        "tv_apps",
        "tv_return",
        "tv_cancel",
        "tv_selector_uod",
        "tv_selector_lor"
      ],
      "name": {
        "en": "Panasonic Remote",
        "de": "Panasonic Fernbedienung",
        "nl": "Panasonic Afstandsbediening"
      },
      "images": {
        "large": "/drivers/panasonic_viera/assets/images/large.png",
        "small": "/drivers/panasonic_viera/assets/images/small.png"
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings",
            "de": "Allgemeine Einstellungen",
            "nl": "Algemene instellingen"
          },
          "children": [
            {
              "id": "ip",
              "type": "text",
              "label": {
                "en": "IP-Address",
                "de": "IP Adresse",
                "nl": "IP adres"
              },
              "value": "192.168.1.1",
              "hint": {
                "en": "The IP-Address is required and can be found in your TV-Settings.",
                "de": "Die IP-Adresse ist erforderlich und finden Sie in Ihren TV-Einstellungen.",
                "nl": "Het IP-adres is verplicht en staat in je TV-instellingen."
              }
            },
            {
              "id": "iprefresh",
              "type": "checkbox",
              "label": {
                "en": "IP-Address refresh",
                "de": "IP-Adresse Aktualisierung",
                "nl": "IP-Adres vernieuwen"
              },
              "value": true,
              "hint": {
                "en": "If turned on, the IP address is updated automatically on change. Does not work on every TV properly! Does only work, if a valid MAC-Adress was entered on setup.",
                "de": "Wenn eingeschaltet, wird die IP-Adresse bei Änderung automatisch aktualisiert. Funktioniert nicht auf jedem Fernseher richtig! Funktioniert nur, wenn beim Setup eine gültige MAC-Adresse eingegeben wurde.",
                "nl": "Als de instelling is ingeschakeld, wordt het IP-adres bij wijziging automatisch bijgewerkt. Werkt niet op elke TV goed! Werkt alleen als bij de instelling een geldig MAC-adres is ingevoerd."
              }
            }
          ]
        }
      ]
    },
    {
      "id": "panasonic_viera_uuid",
      "class": "tv",
      "capabilities": [
        "onoff",
        "channel_up",
        "volume_up",
        "channel_down",
        "volume_down",
        "tv_input",
        "volume_mute",
        "tv_home",
        "tv_apps",
        "tv_return",
        "tv_cancel",
        "tv_selector_uod",
        "tv_selector_lor"
      ],
      "name": {
        "en": "Panasonic Remote",
        "de": "Panasonic Fernbedienung",
        "nl": "Panasonic Afstandsbediening"
      },
      "images": {
        "large": "/drivers/panasonic_viera_uuid/assets/images/large.png",
        "small": "/drivers/panasonic_viera_uuid/assets/images/small.png"
      },
      "pair": [
        {
          "id": "request_device",
          "navigation": {
            "next": "request_ip"
          }
        },
        {
          "id": "request_ip"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings",
            "de": "Allgemeine Einstellungen",
            "nl": "Algemene instellingen"
          },
          "children": [
            {
              "id": "ip",
              "type": "text",
              "label": {
                "en": "IP-Address",
                "de": "IP Adresse",
                "nl": "IP adres"
              },
              "value": "192.168.1.1",
              "hint": {
                "en": "The IP-Address is required and can be found in your TV-Settings.",
                "de": "Die IP-Adresse ist erforderlich und finden Sie in Ihren TV-Einstellungen.",
                "nl": "Het IP-adres is verplicht en staat in je TV-instellingen."
              }
            },
            {
              "id": "mac",
              "type": "text",
              "label": {
                "en": "MAC-Address",
                "de": "MAC-Adresse",
                "nl": "MAC-adres"
              },
              "hint": {
                "en": "The MAC-Address is required for 'Wake On LAN' and can be found in your TV-Settings.",
                "de": "Die MAC-Adresse ist erforderlich für 'Wake On LAN' und finden Sie in Ihren TV-Einstellungen.",
                "nl": "Het MAC-adres is verplicht for 'Wake On LAN' en staat in je TV-instellingen."
              }
            },
            {
              "id": "iprefresh",
              "type": "checkbox",
              "label": {
                "en": "IP-Address refresh",
                "de": "IP-Adresse Aktualisierung",
                "nl": "IP-Adres vernieuwen"
              },
              "value": true,
              "hint": {
                "en": "If turned on, the IP address is updated automatically on change. Does not work on every TV properly! Does only work, if a valid Unique Serial Number was entered on setup.",
                "de": "Wenn eingeschaltet, wird die IP-Adresse bei Änderung automatisch aktualisiert. Funktioniert nicht auf jedem Fernseher richtig! Funktioniert nur, wenn beim Setup eine gültige Unique Serial Number eingegeben wurde.",
                "nl": "Als de instelling is ingeschakeld, wordt het IP-adres bij wijziging automatisch bijgewerkt. Werkt niet op elke TV goed! Werkt alleen als bij de instelling een geldig Unique Serial Number is ingevoerd."
              }
            }
          ]
        }
      ]
    }
  ],
  "discovery": {
    "discovery_viera": {
      "type": "ssdp",
      "ssdp": {
        "search": "urn:panasonic-com:device:p00RemoteController:1"
      },
      "id": "{{headers.usn}}",
      "conditions": [
        [
          {
            "field": "headers.st",
            "match": {
              "type": "string",
              "value": "urn:panasonic-com:device:p00RemoteController:1"
            }
          }
        ]
      ]
    }
  },
